@model Finch_Inventory.Models.Clothing

@using Finch_Inventory.Models
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="card card-primary">
                <div class="card-header">
                    <h2>Replace: Serial#@ViewBag.Existing.Serial_Number | @ViewBag.Existing.Type.Type1 | PM# @ViewBag.Existing.PM_Number | Position - @ViewBag.Existing.Position.Position1</h2>
                </div>
                @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "replaceForm" }))
                {
                    <div class="card-body">

                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@Model.ID" />
                        @if (ViewBag.AvailableRolls.Count > 0)
                        {
                            <div class="form-group">
                                @Html.LabelFor(model => model.ID, "Replace This Roll With:", htmlAttributes: new { @class = "control-label col-md-3 text-danger" })
                                <div class="col-md-9">
                                    <select id="replacementId" , name="replacementId">
                                        @{
                                            using (var db = new FinchDbContext())
                                            {
                                                foreach (Clothing item in @ViewBag.AvailableRolls)
                                                {
                                                    <option value="@item.ID">@item.Serial_Number | @item.Type.Type1  | PM#@item.PM_Number | Pos-@item.Position.Position1</option>
                                                }
                                            }
                                        }


                                    </select>
                                    @Html.ValidationMessageFor(model => model.PM_Number, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        }
                        else
                        {
                            <h4 class="text-danger">No available replacements in inventory.</h4>
                        }


                    </div>
                    <div class="card-footer">
                        <a href="@Url.Action("Index","Home")" class="btn btn-primary" title="Cancel">Cancel</a>
                        <button href="#" type="submit" id="complete-btn" class="btn btn-success" title="Complete Replacement">Complete Replacement</button>
                    </div>
                }
            </div>
        </div>
    </div>

    @section Scripts
{
        <script>
            $(document).ready(function () {
                'use strict';
                 var availables = '@ViewBag.AvailableRolls.Count';
                console.log(availables);
                if (availables < 1) {
                    $('#complete-btn').prop('disabled', true);
                }

                $('#replaceForm').submit(function (e) {
                    e.preventDefault();

                    var id = '@Model.ID';
                    var replacementId = $('#replacementId').val();
                    var url = '@Url.Action("Replace", "Clothing")';
                    var form = $('#replaceForm').serialize();
                    console.log('ID: ' + id + '  Replacement ID: ' + replacementId);
                    $.ajax({
                        url: url,
                        type: "POST",
                        data: form
                    })
                });
            });
        </script>
    }
